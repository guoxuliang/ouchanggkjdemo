<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.ouc.demo.ui.activity.shopping.SearchActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.design.widget.AppBarLayout
            android:id="@+id/toolbarsearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#ed402f"
                app:popupTheme="@style/AppTheme.PopupOverlay">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/btn_back_search"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_backb"
                        android:text="搜索"/>
                    <EditText
                        android:id="@+id/et_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:hint="请输入你想搜索的内容"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:background="@drawable/rounded_edittext"
                        android:paddingRight="5dp"/>

                    <ImageView
                        android:id="@+id/btn_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:src="@drawable/icon_fdj_bg"
                        android:text="搜索"/>
                </LinearLayout>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:id="@+id/ll_tiaojian"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/toolbarsearch"
            android:background="#e6e6e6"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:drawableRight="@drawable/icon_xjt"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"
                android:text="综合"/>
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/white"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:drawableRight="@drawable/icon_xjt"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"
                android:text="销量"/>
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/white"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:drawableRight="@drawable/icon_xjt"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:text="价格"/>
        </LinearLayout>
        <TextView
            android:id="@+id/texttest"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/ll_tiaojian"
            android:text="测试"/>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
