<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TitlebarView">
        <attr name="leftText" format="string" />
        <attr name="leftTextColor" format="color" />
        <attr name="centerTextColor" format="color" />
        <attr name="centerTitle" format="string" />
        <attr name="rightTextColor" format="color" />
        <attr name="rightText" format="string" />
        <attr name="leftDrawble" format="reference" />
        <attr name="rightDrawable" format="reference" />
    </declare-styleable>


    <!-- 自定义 控件 的 属性 -->
    <declare-styleable name="LoginEditTextStyle">
        <!-- 删除 按钮 图标 -->
        <attr name="deleteDrawable" format="reference" />
        <!-- 隐藏 按钮 图标 -->
        <attr name="visibleDrawable" format="reference" />
        <!-- 输入框 左边 显示 的 图标-->
        <attr name="iconDrawable" format="reference" />
        <!-- 是否 是 密码 输入 框 -->
        <attr name="passwordTag" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CountDownProgress">
        <!-- 圆实心的颜色 -->
        <attr name="circSolidColor" format="color"></attr>

        <!-- 圆边框的颜色 -->
        <attr name="circFrameColor" format="color"></attr>

        <!-- 进度条的颜色 -->
        <attr name="progressColor" format="color"></attr>

        <!-- 文字的颜色 -->
        <attr name="textColor" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="drawableSwitch">
        <attr name="radius" format="dimension" />
        <attr name="switchOnColor" format="color" />
        <attr name="switchOffColor" format="color" />
        <attr name="circleColor" format="color" />
        <attr name="textColor2" format="color" />
        <attr name="isSwitchOn" format="boolean" />
    </declare-styleable>

</resources>
